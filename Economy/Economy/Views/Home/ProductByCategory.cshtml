@using Model.EF;
@model List<Product>
@{
    ViewBag.Title = "ProductByCategory";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}

<style>
    .imgShow {
        width: 100%;
        height: 150px;
        padding: 20px;
        margin: auto;
        box-sizing: border-box;
    }

        .imgShow img {
            width: 150px;
            transition: 300ms;
        }

        .imgShow:hover img {
            transform: scale(1.2);
        }

    .product-image-wrapper h2 {
        margin-top: 40px;
    }

    .txtChiTietSP:hover a {
        transform: scale(1.1);
    }
</style>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    @Html.Action("Category", "Home")

                    @Html.Action("Brand","Home")

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Price Range</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                            <b class="pull-left">$ 0</b> <b class="pull-right">$ 600</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/Assets/LayoutWebsite/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items" id="AllProduct">
                    <!--features_items-->
                    <h2 class="title text-center">Tất cả sản phẩm</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <div class="imgShow">
                                            <img src="@item.Image" alt="" />
                                        </div>
                                        <h2>@item.Price.Value.ToString("#,##") VNĐ</h2>
                                        <p>@item.Name</p>
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Mua hàng</a>
                                    </div>
                                </div>
                                <div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        @if (item.Quantity > 0)
                                        {
                                            <li><a href="#" style="color: green;"><i class="fa fa-plus-square"></i>Còn hàng (@item.Quantity)</a></li>
                                            <li class="txtChiTietSP"><a class="txtChiTietSP" href="@Url.Action("Detail","Product",new { @id=item.ID})" style="color: darkgoldenrod;"><i class="fa fa-plus-square"></i>Chi tiết sản phẩm</a></li>
                                        }
                                        else
                                        {
                                            <li><a href="#" style="color: red;"><i class="fa fa-plus-square"></i>Hết hàng</a></li>
                                            <li class="txtChiTietSP"><a href="@Url.Action("Detail","Product",new { @id=item.ID})" style="color: darkgoldenrod;"><i class="fa fa-plus-square"></i>Chi tiết sản phẩm</a></li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div><!--features_items-->

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <textarea id="txtdemo"></textarea>
            </div>
        </div>
    </div>
</section>