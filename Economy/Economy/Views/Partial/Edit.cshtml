@using Economy.Models;
@model AddNewProduct
@{
    @*var drop = ViewBag.Brand;
        var cate = ViewBag.Category;*@
}

<a href="@Url.Action("Edit","Partial")" class="btn btn-success" data-toggle="modal" data-target="#editModal">Edit</a>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header card-header-primary">
                                    <h4 class="card-title">Edit product</h4>
                                    <p class="card-category">E-Shopper</p>
                                </div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Edit", "Partial", FormMethod.Post))
                                    {
                                        <div class="row">
                                            <div class="col-md-5">
                                                <div class="form-group">
                                                    <label class="bmd-label-floating">Product name</label>
                                                    @Html.TextBoxFor(Model => Model.ProductName, null, new { @class = "form-control" })
                                                </div>
                                            </div>
                                                @if (ViewBag.Brand != null)
                                                {
                                                    <div class="col-md-3">
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                <label class="input-group-text" for="inputGroupSelect01">Brand</label>
                                                            </div>
                                                            @Html.DropDownListFor(Model => Model.BrandName, ViewBag.Brand as SelectList, "...", new { @class = "custom-select col-md-12" })
                                                        </div>
                                                    </div>
                                                }
                                                @if (ViewBag.Cates != null)
                                                {
                                                    <div class="col-md-3">
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                <label class="input-group-text" for="inputGroupSelect01">Category</label>
                                                            </div>
                                                            @Html.DropDownListFor(Model => Model.CategoryName, ViewBag.Cates as SelectList, "...", new { @class = "custom-select col-md-12" })
                                                        </div>
                                                    </div>
                                                }
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="bmd-label-floating">Price</label>
                                                    @Html.TextBoxFor(Model => Model.Price, null, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="bmd-label-floating">Promotion price</label>
                                                    @Html.TextBoxFor(Model => Model.PromotionPrice, null, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="bmd-label-floating">Image</label>
                                                <input type="file" class="form-control-file">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Description</label>
                                                    <div class="form-group">
                                                        <label class="bmd-label-floating">Product description</label>
                                                        @Html.TextAreaFor(Model => Model.Description, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary pull-right">Finish</button>
                                        <div class="clearfix"></div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

