@using Model.EF;
@model List<Blog>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">

                    @Html.Action("Category", "Home")

                    @Html.Action("Brand", "Home")

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Price Range</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                            <b class="pull-left">$ 0</b> <b class="pull-right">$ 600</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/Assets/LayoutWebsite/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right ">
                <div class="blog-post-area">
                    <h2 class="title text-center">Blog List</h2>
                    @foreach (var item in Model)
                    {
                        <div class="single-blog-post">
                            <h3 style="font-weight:600; font-size:20px;">@item.Title</h3>
                            <div class="post-meta">
                                <ul>
                                    <li><i class="fa fa-user"></i> @item.Creater</li>
                                    <li><i class="fa fa-calendar"></i> @item.CreatedDate</li>
                                </ul>
                            </div>
                            <a href="">
                                <img src="@item.Thumbnail" style="width:700px;">
                            </a>
                            <p>@item.ShortContent</p>
                            <a class="btn btn-primary" href="@Url.Action("BlogDetail", new { id=item.ID})">Read More</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
